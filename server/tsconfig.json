{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES6", // Choose your target ECMAScript version
    "lib": ["ES2015", "ES2016", "ES2017", "DOM"],
    "module": "commonjs", // Choose your module system
    "strict": true /* Enable all strict type-checking options */,
    "esModuleInterop": true /* Enable interoperability between CommonJS and ES Modules */,
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./" // Specify the source directory where your TypeScript files are located
  },

  "exclude": ["node_modules"]
}
